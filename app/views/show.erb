<h3><%= @selecting_meetup.name %></h3>

<p>Location: <%= @selecting_meetup.location %></p>
<p>Description: <%= @selecting_meetup.description %></p>
<p>Start Time: <%= @selecting_meetup.start_time %></p>
<p>End Time: <%= @selecting_meetup.end_time %></p>

<form action='/join_meetup/<%="#{@selecting_meetup.id}"%>' method='post'>
  <input type='hidden' name="<%=@button%>" value="<%=@selecting_meetup.id%>" />
  <input type='submit' value="<%=@button%>"/>
</form>
<br/>

<h3>Members</h3>

<ul>
  <%@users.each do |user|%>
  <li><%=user.attendances.where(meetup_id: @selecting_meetup.id).first.member_type%><br/><img src=<%="#{user.avatar_url}"%>><br/><%=user.username%></li>
  <br/>
  <%end%>
</ul>
